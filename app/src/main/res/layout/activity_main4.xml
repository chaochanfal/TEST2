<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:foregroundGravity="right|bottom">


    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:foregroundGravity="bottom|right"
        >
        <!-- 添加居中显示的红色背景的TextView，将显示在最下层  -->
        <ImageView android:text="红色背景的TextView"
            android:id="@+id/imageView"
            android:background="#FFFF0000"
            android:layout_gravity="center"
            android:layout_width="300px"
            android:layout_height="300px"/>
        <!-- 添加居中显示的橙色背景的TextView，将显示在中间层  -->
        <ImageView android:text="橙色背景的TextView"
            android:id="@+id/imageView2"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="#FFFF6600"
            android:layout_gravity="center"
            />
        <!-- 添加居中显示的黄色背景的TextView，将显示在最上层  -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:background="#FFFFEE00"
            android:text="黄色背景的TextView" />

    </FrameLayout>

    <Button
        android:id="@+id/UC3_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

</android.support.constraint.ConstraintLayout>


